<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.CadastroTActivity">

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Cadastrar Time"
        android:textColor="@color/Black"
        android:textSize="11pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código: "
            android:textColor="@color/Black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/setIDTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/setNomeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName" />


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Região: "
        android:textColor="#000000"
        android:textSize="18sp">

    </TextView>


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/border"
        tools:ignore="UselessParent">

        <Spinner
            android:id="@+id/setRegiaoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Estado: "
        android:textColor="#000000"
        android:textSize="18sp">

    </TextView>


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/border"
        tools:ignore="UselessParent">

        <Spinner
            android:id="@+id/setEstadoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/setPaisesTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="País"
            android:inputType="textPersonName" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tipo do Time: "
        android:textColor="#000000"
        android:textSize="18sp">

    </TextView>


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/border"
        tools:ignore="UselessParent">

        <Spinner
            android:id="@+id/setTipoTimeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

    </LinearLayout>


    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Campeonato: "
        android:textColor="#000000"
        android:textSize="18sp">

    </TextView>


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/border"
        tools:ignore="UselessParent">

        <Spinner
            android:id="@+id/setLigasTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnSalvarTime"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cerclebackgroundbuttonsalvar"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textColor="@color/backgroundcolor"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btnExcluirTime"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cerclebackgroundbuttonexcluir"
            android:text="Excluir"
            android:textAllCaps="false"
            android:textColor="@color/backgroundcolor"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>